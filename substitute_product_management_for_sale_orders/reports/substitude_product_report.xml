<odoo>
    <!-- Inherit the existing sale order document template -->
    <template id="substitute_product_report" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']/div[@name='informations_date']" position="before">
            <t t-foreach="docs" t-as="doc">
                <!-- Check if original_product_id is set before displaying the row -->
                <t t-if="doc.original_product_id">
                    <tr>
                        <th>Original Product</th>
                        <td>
                            <span class="m-0">
                                <t t-esc="doc.original_product_id.name"/>
                            </span>
                        </td>
                    </tr>
                </t>
                <!-- Check if substitute_product_id is set before displaying the row -->
                <t t-if="doc.substitute_product_id">
                    <tr>
                        <th>Substituted Product</th>
                        <td>
                            <span class="m-0">
                                <t t-esc="doc.substitute_product_id.name"/>
                            </span>
                        </td>
                    </tr>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
